extends blog-base

block blog-content
    .row
        .col-8.offset-2
            a(href='/')
                h2 Somewhat Irregular
            br
            br
            each post in posts
                a(href='/post/#{post.id}/')
                    h4 #{post.title}
                em #{post.published.toDateString()} #{post.published.toLocaleTimeString('en-US', {hour12: false})}
                p #{post.content}
                br
                br